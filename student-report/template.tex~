%% references
\bibliographystyle{aa-note} %% aa.bst but adding links and notes to references
%%\raggedright              %% only for adsaa with dvips, not for pdflatex
\bibliography{XXX}          %% XXX.bib = your Bibtex entries copied from ADS

\end{document}

